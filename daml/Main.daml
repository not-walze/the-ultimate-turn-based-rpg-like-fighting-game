
module Main where

import Daml.Script
import Weapon
import Sheet


setup : Script SheetID
setup = script do
  [master, goblin, wallace] <- sequence $ [allocateParty] <*> ["master", "wallace", "goblin"]

  let wallaceSheet = Sheet "Baracus Rex" 100 sword wallace master
  let goblinSheet = Sheet "Goblin" 20 dagger goblin master

  id <- submit master $ createCmd wallaceSheet
  id1 <- submit master $ createCmd goblinSheet

  submit goblin $ exerciseCmd id1 $ Attack id1





